# =============================================================================
# Dropshipping Platform - Environment Configuration
# =============================================================================
# Copy this file to .env and adjust values as needed.
# For Docker Compose, most defaults work out-of-the-box.
# =============================================================================

# -----------------------------------------------------------------------------
# Database Configuration
# -----------------------------------------------------------------------------
DATABASE_URL=postgresql+asyncpg://dropshipping:dropshipping@localhost:5432/dropshipping
POSTGRES_USER=dropshipping
POSTGRES_PASSWORD=dropshipping
POSTGRES_DB=dropshipping

# Database Pool Settings (optional)
DB_POOL_SIZE=5
DB_MAX_OVERFLOW=10
DB_ECHO=false

# -----------------------------------------------------------------------------
# Meta Ads API Configuration
# -----------------------------------------------------------------------------
META_ADS_ACCESS_TOKEN=your_access_token_here
META_ADS_BASE_URL=https://graph.facebook.com
META_ADS_API_VERSION=v18.0

# -----------------------------------------------------------------------------
# Security (Admin API Key for /admin endpoints)
# -----------------------------------------------------------------------------
# Leave empty or unset for development (admin endpoints unprotected).
# In production, set a strong random key.
SECURITY_ADMIN_API_KEY=changeme-in-prod

# -----------------------------------------------------------------------------
# Celery / Redis Configuration
# -----------------------------------------------------------------------------
# Docker Compose defaults (redis service on internal network).
# For local dev without Docker, use redis://localhost:6379/0
CELERY_BROKER_URL=redis://redis:6379/0
CELERY_RESULT_BACKEND=redis://redis:6379/0

# -----------------------------------------------------------------------------
# Application Settings
# -----------------------------------------------------------------------------
APP_ENVIRONMENT=development
APP_LOG_LEVEL=INFO
